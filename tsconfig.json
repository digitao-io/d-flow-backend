{
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
