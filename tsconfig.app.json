{
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./src",
    "target": "ESNext",
    "outDir": "./dist"
  }
}